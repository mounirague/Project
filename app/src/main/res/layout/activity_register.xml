<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/started"
            android:alpha="0.60"
            android:contentDescription="Background Image" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="52dp"
            android:src="@drawable/img"
            />

        <TextView
            android:id="@+id/txt_hik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:paddingTop="9dp"
            android:text="HikeOn"
            android:textColor="#FA000000"
            android:textSize="29dp"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/et_fullname"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_hik"
            android:hint="Enter your full name"
            android:background="@drawable/edit"
            android:textColorHint="#2D2D2D"
            android:paddingLeft="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            />

        <EditText
            android:id="@+id/et_email2"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_fullname"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit"
            android:textColorHint="#2D2D2D"
            android:paddingLeft="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"

            />
        <EditText
            android:id="@+id/et_password2"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_email2"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:background="@drawable/edit"
            android:textColorHint="#2D2D2D"
            android:paddingLeft="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"

            />
        <EditText
            android:id="@+id/et_password3"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_password2"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:background="@drawable/edit"
            android:textColorHint="#2D2D2D"
            android:paddingLeft="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"

            />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_below="@+id/et_password3"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#9A938B"
            android:bottomLeftRadius="0dp"
            android:bottomRightRadius="0dp"
            android:topLeftRadius="16dp"
            android:topRightRadius="16dp"
            android:text="Register"
            android:textColor="#020202"
            android:textSize="20dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/btn_register"
            android:layout_marginLeft="75dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_create_account"
                android:text="Already have an account? "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_login"
                android:layout_marginTop="70dp"

                />

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:layout_marginTop="70dp"
                android:textSize="18dp"
                android:textColor="#784E0A"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>